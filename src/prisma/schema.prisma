//-- Entities

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model admin {
  id           String    @id @unique @default(uuid())
  email        String    @unique
  full_name    String
  password     String
  access_level access?   @default(admin)
  verified     Boolean   @default(false)
  createdAt    DateTime? @default(now()) @map("created_at")
  updatedAt    DateTime? @default(now()) @updatedAt @map("updated_at")
}

model patient {
  id           String        @id @unique @default(uuid())
  email        String        @unique
  full_name    String
  password     String
  country      String?
  zip          String?
  city         String? 
  img_url      String?
  active       Boolean       @default(false)
  payment      payment[]
  verified     Boolean       @default(false)
  access_level access?       @default(patient)
  createdAt    DateTime?     @default(now()) @map("created_at")
  updatedAt    DateTime?     @default(now()) @updatedAt @map("updated_at")
  appointment  appointment[]
}

model practitioner {
  id               String         @id @unique @default(uuid())
  email            String         @unique
  full_name        String
  password         String
  dob              String
  pob              String
  country          String?
  zip              String?
  city             String?  
  img_url          String
  digital_address  String
  contact          String
  id_type          indentity_card @default(ghana_card)
  status           statuses?      @default(pending)
  id_number        String
  qualification    String
  licence_number   String
  specialisation   specialisation? @relation(fields: [specialisationId], references: [id])
  specialisationId String?
  hospital         hospital?       @relation(fields: [hospitalId], references: [id])
  hospitalId       String?
  access_level     access?        @default(practitioner)
  active           Boolean        @default(false)
  verified         Boolean        @default(false)
  createdAt        DateTime?      @default(now()) @map("created_at")
  updatedAt        DateTime?      @updatedAt @map("updated_at")
  appointment      appointment[]
  practitionerhospitalspecialisation practitionerhospitalspecialisation[]
}

model specialisation {
  id           String        @id @unique @default(uuid())
  name         String        @unique
  createdAt    DateTime      @default(now()) @map("created_at")
  updatedAt    DateTime      @updatedAt @map("updated_at")
  practitioner practitioner[]
  practitionerhospitalspecialisation practitionerhospitalspecialisation[]
}

model hospital {
  id           String         @id @unique @default(uuid())
  name         String         @unique
  city         String
  zip          String
  street       String
  country      String
  createdAt    DateTime?      @default(now()) @map("created_at")
  updatedAt    DateTime       @updatedAt @map("updated_at") 
  practitioner practitioner[]
  appointment  appointment[]
  practitionerhospitalspecialisation practitionerhospitalspecialisation[]
}

model practitionerhospitalspecialisation {
  practitionerId   String
  practitioner     practitioner?  @relation(fields: [practitionerId], references: [id])
  hospitalId       String
  hospital         hospital?  @relation(fields: [hospitalId], references: [id])
  specialisationId       String
  specialisation         specialisation?  @relation(fields: [specialisationId], references: [id])

  @@id([practitionerId, hospitalId, specialisationId])
}

model appointment {
  id                String       @id @unique @default(uuid())
  title             String       @unique
  date              DateTime
  time              DateTime
  practitioner      practitioner? @relation(fields: [practitionerId], references: [id])
  practitionerId    String?
  patient           patient?      @relation(fields: [patientId], references: [id])
  patientId         String?
  hospital          hospital?      @relation(fields: [hospitalId], references: [id])
  hospitalId        String?
  service           service?      @relation(fields: [serviceId], references: [id])
  serviceId         String?
  comment           String
  tc                Boolean
  payment_completed Boolean
  status            statuses?    @default(pending)
  expiry            DateTime
  createdAt         DateTime?    @default(now()) @map("created_at")
  updatedAt         DateTime?    @updatedAt @map("updated_at")
}

model service {
  id        String    @id @unique @default(uuid())
  name      String    @unique
  price     Float
  createdAt DateTime? @default(now()) @map("created_at")
  updatedAt DateTime? @updatedAt @map("updated_at")
  appointment appointment[]
}

model otp {
  id        String    @id @unique @default(uuid())
  user_id   String    @unique
  email     String?
  otp_code  String
  createdAt DateTime? @default(now()) @map("created_at")
  updatedAt DateTime? @updatedAt @map("updated_at")
}

model payment {
  id                String @id @unique @default(uuid())
  amount            String 
  patient           patient      @relation(fields: [patientId], references: [id])
  patientId         String
  referenceId       String
  createdAt         DateTime? @default(now()) @map("created_at")
  updatedAt         DateTime? @updatedAt @map("updated_at")
}

enum access {
  super_admin
  admin
  patient
  practitioner
}

enum statuses {
  approved
  rejected
  pending
}

enum indentity_card {
  ghana_card
  voter_id
  passport
  driving_license
}

enum days {
  monday
  tuesday
  wednesday
  thursday
  friday
  saturday
  sunday
}
